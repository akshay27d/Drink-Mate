<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.akshaydesai.drinkmate.MainMenu"
    android:background="#1f1f2e">

    <Button
        android:id="@+id/StartButton"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:text="Start"
        app:layout_constraintBottom_toTopOf="@+id/RecordsButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick= "startClicked"
        android:background="#D4AF37"/>

    <Button
        android:id="@+id/RecordsButton"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:text="Records"
        app:layout_constraintBottom_toTopOf="@+id/SettingsButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick= "recordsClicked"
        android:background="#D4AF37"/>

    <Button
        android:id="@+id/SettingsButton"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:text="Settings"
        app:layout_constraintBottom_toTopOf="@+id/AboutButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick= "settingsClicked"
        android:background="#D4AF37"/>

    <Button
        android:id="@+id/AboutButton"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginBottom="41dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:text="About"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick= "aboutClicked"
        android:background="#D4AF37"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="343dp"
        android:layout_height="148dp"
        app:srcCompat="@drawable/title"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="50dp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
