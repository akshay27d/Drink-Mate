<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.akshaydesai.drinkmate.dateEntered">

    <DatePicker
        android:datePickerMode="spinner"
        android:calendarViewShown="false"
        android:id="@+id/startDatePicker"
        android:layout_width="234dp"
        android:layout_height="131dp"
        android:background="#D4AF37"
        tools:layout_editor_absoluteY="-5dp"
        tools:layout_editor_absoluteX="-1dp"
        />

    <Button
        android:id="@+id/dismiss1"
        android:layout_width="234dp"
        android:layout_height="40dp"
        android:layout_marginTop="0dp"
        android:text="Button"
        app:layout_constraintLeft_toLeftOf="@+id/startDatePicker"
        app:layout_constraintTop_toBottomOf="@+id/startDatePicker" />
</android.support.constraint.ConstraintLayout>
