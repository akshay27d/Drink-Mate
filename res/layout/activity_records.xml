<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.akshaydesai.drinkmate.RecordsActivity"
    android:background="#1f1f2e">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="364dp"
        android:layout_height="75dp"
        app:srcCompat="@drawable/title"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/recordsHeader"
        android:layout_width="268dp"
        android:layout_height="110dp"
        android:gravity="center"
        android:text="@string/recordsTitle"
        android:textSize="65sp"
        android:layout_marginRight="80dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="80dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="#D4AF37"
        app:layout_constraintHorizontal_bias="0.529"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <Button
        android:id="@+id/startDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:onClick="buttonClicked"
        android:text="@string/startdate"
        app:layout_constraintTop_toBottomOf="@+id/recordsHeader"
        app:layout_constraintLeft_toLeftOf="@+id/recordsHeader"/>

    <Button
        android:id="@+id/startTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:onClick="buttonClicked"
        android:text="@string/starttime"
        app:layout_constraintRight_toRightOf="@+id/recordsHeader"
        app:layout_constraintTop_toBottomOf="@+id/recordsHeader"
        tools:layout_editor_absoluteX="215dp" />

    <EditText
        android:id="@+id/placeholder"
        android:layout_width="268dp"
        android:layout_height="1dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/startDate"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/endDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:text="@string/enddate"
        app:layout_constraintLeft_toLeftOf="@+id/startDate"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/startDate"
        app:layout_constraintHorizontal_bias="0.529"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/startDate"
        android:onClick="buttonClicked"
        />

    <Button
        android:id="@+id/endTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="0dp"
        android:text="@string/endtime"
        app:layout_constraintRight_toRightOf="@+id/startTime"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/startTime"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/startTime"
        android:onClick="buttonClicked"
        />

    <Button
        android:id="@+id/go"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:text="@string/go"
        app:layout_constraintLeft_toRightOf="@+id/endDate"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toLeftOf="@+id/endTime"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/endDate"
        android:onClick="buttonClicked"
        />


</android.support.constraint.ConstraintLayout>
