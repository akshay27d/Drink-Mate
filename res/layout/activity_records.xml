<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.akshaydesai.drinkmate.RecordsActivity"
    android:background="#1f1f2e">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="364dp"
        android:layout_height="75dp"
        app:srcCompat="@drawable/title"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/recordsHeader"
        android:layout_width="268dp"
        android:layout_height="110dp"
        android:gravity="center"
        android:text="@string/recordsTitle"
        android:textSize="65sp"
        android:layout_marginRight="80dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="80dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="#D4AF37"
        app:layout_constraintHorizontal_bias="0.529"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <TextView
        android:id="@+id/lastDay"
        android:textColor="#D4AF37"
        android:layout_width="232dp"
        android:layout_height="41dp"
        android:text="TextView"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/recordsHeader" />

    <TextView
        android:id="@+id/lastWeek"
        android:textColor="#D4AF37"
        android:layout_width="228dp"
        android:layout_height="41dp"
        android:text="TextView"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/lastDay"
        android:layout_marginRight="24dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/mostIn12"
        android:textColor="#D4AF37"
        android:layout_width="233dp"
        android:layout_height="41dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp"
        android:text="TextView"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lastWeek" />

    <TextView
        android:id="@+id/daysUsed"
        android:textColor="#D4AF37"
        android:layout_width="211dp"
        android:layout_height="41dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mostIn12" />

    <TextView
        android:id="@+id/daysSinceLastUsed"
        android:textColor="#D4AF37"
        android:layout_width="205dp"
        android:layout_height="38dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/daysUsed" />


</android.support.constraint.ConstraintLayout>
